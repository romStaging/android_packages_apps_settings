<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/system_interface_title" >

    <PreferenceScreen
        android:fragment="com.android.settings.rascarlo.StatusBarSettings"
        android:key="status_bar"
        android:title="@string/status_bar_title" />

    <PreferenceScreen
        android:fragment="com.android.settings.rascarlo.StatusBarClockStyle"
        android:key="clock_style_pref"
        android:title="@string/status_bar_clock" />
    
   <PreferenceScreen
        android:key="navigation_bar"
        android:fragment="com.android.settings.rascarlo.NavigationBarSettings"
        android:title="@string/navigation_bar_title" />

   <PreferenceScreen
        android:fragment="com.android.settings.rascarlo.VolumeRocker"
        android:key="volume_rocker_settings"
        android:title="@string/volume_rocker_category_title" />

   <PreferenceScreen
        android:fragment="com.android.settings.rascarlo.NavRing"
        android:key="navigation_ring"
        android:title="@string/navigation_ring_title" />

   <PreferenceScreen
        android:fragment="com.android.settings.rascarlo.LockscreenTargets"
        android:key="lockscreen_targets"
        android:title="@string/lockscreen_target_title" />

    <PreferenceScreen
	android:key="power_menu"
	android:title="@string/power_menu_title"
        android:fragment="com.android.settings.rascarlo.PowerMenu" />

    <PreferenceScreen
        android:fragment="com.android.settings.rascarlo.PlugInPromptSettings"
        android:key="plug_in_prompt_settings"
        android:title="@string/plug_in_prompt_settings_title" />

    <PreferenceScreen
        android:fragment="com.android.settings.rascarlo.NotificationLightSettings"
        android:key="notification_pulse"
        android:title="@string/led_settings_category_title" />
	
	<!-- OmniSwitch -->
	<PreferenceScreen
       android:id="@+id/omniswitch"
       android:title="@string/omniswitch_category" 
       android:fragment="com.android.settings.rascarlo.OmniSwitch" />

</PreferenceScreen>
