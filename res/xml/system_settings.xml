<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/system_settings_title"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:key="system_settings">

    <PreferenceScreen
       android:id="@+id/omniswitch"
       android:icon="@drawable/ic_settings_omniswitch" 
       android:fragment="com.android.settings.rascarlo.OmniSwitch"
       android:title="@string/omniswitch_category" />

    <PreferenceScreen
            android:key="wakelock_blocker"
            android:fragment="com.android.settings.rascarlo.WakeLockBlocker"
	    android:icon="@drawable/ic_settings_wakelock_blocker"
            android:title="@string/wakelock_blocker" />

	<PreferenceScreen
                android:key="screen_recorder"
                android:title="@string/screen_recorder_title"
		android:icon="@drawable/ic_settings_src"
                android:fragment="com.android.settings.chameleonos.ScreenRecorderSettings" />

    <PreferenceScreen
        android:id="@+id/theme_settings"
        android:fragment="com.android.settings.slim.themes.ThemeSettings"
	android:icon="@drawable/ic_settings_themes"
        android:title="@string/theme_menu_title" />

    <PreferenceScreen
        android:key="recents_panel"
        android:title="@string/recents_panel_settings_title"
        android:summary="@string/recents_panel_settings_summary"
        android:fragment="com.android.settings.rascarlo.RecentsPanelSettings" />

    <PreferenceScreen
        android:fragment="com.android.settings.rascarlo.NotificationLightSettings"
        android:key="notification_pulse"
        android:title="@string/led_settings_category_title" />

</PreferenceScreen>

